<div id="generic_list">
<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Coordinator</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>

<% @companies.each do |company| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= company.name %></td>
    <td><%= company.website %></td>
    <td><%= company.coordinator_name %></td>
    <td><%= company.coordinator_email %></td>
    <td><%= company.coordinator_phone %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<div id='footer'>
<br />

<%= button_to 'New Company', new_company_path, :method=>:get %>
<br/>
<%= link_to 'Postings', postings_path %>
<br/>
<%= link_to 'Questions', questions_path %>
</div>
